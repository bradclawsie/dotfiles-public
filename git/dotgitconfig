[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[user]
  name = Brad Clawsie
  email = brad@b7j0c.org
  signingkey = ~/.ssh/id_ed25519.pub

[pull]
  ff = only

[init]
  defaultBranch = master

[commit]
	gpgsign = true

[gpg]
  format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers

[tig]
  main-view-date-display = no

[tig "bind"]
  status = C !git commit -S

[alias]
  st = status -sb
  tree = log --oneline --decorate --graph

[alias]
  undo = reflog show --pretty=format:'%C(auto)%h %C(blue)%gd%C(reset) %C(yellow)%s%C(reset) %C(green)(%cr)%C(reset)' --date=relative

[alias]
  ghosts = !"git fsck --lost-found | grep commit | cut -d ' ' -f 3 | xargs -n 1 git log -n 1 --pretty=format:'%C(red)%h%C(reset) %s' --color"

